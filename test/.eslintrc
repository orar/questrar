{
  "env": {
    "jest": true
  },
  "globals": {
    "expect": false,
    "expects": false,
    "describe": false,
    "it": false,
    "xit": false,
    "beforeAll": false,
    "beforeEach": false,
    "afterAll": false,
    "afterEach": false,
    "jest": false
  },
  "rules": {
    "no-extra-semi": 0,
    // disable semi colon

    "comma-dangle": 1,
    // don't force es6 functions to include space before paren
    "space-before-function-paren": 0,

    // allow specifying true explicitly for boolean props
    "react/jsx-boolean-value": 0,

    // allow import from devDep packages
    "import/no-extraneous-dependencies": 0,

    "prefer-destructuring": 0
  }
}
